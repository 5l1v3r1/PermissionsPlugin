    <id>Plugin.Permissions</id>
    <version>$version$</version>
    <title>Permissions Plugin for Xamarin</title>
    <authors>James Montemagno</authors>
    <owners>James Montemagno</owners>
    <licenseUrl>https://raw.githubusercontent.com/jamesmontemagno/PermissionsPlugin/master/LICENSE</licenseUrl>
